<!DOCTYPE html>
<html lang="en">

<head>
  <title>To-Do List</title>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS v5.2.1 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet">

  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

  <style>
    body {
      margin-top: 50px;
      background: #f8f8f8;
    }

    .card {
      padding: 25px;
      margin-bottom: 20px;
      background: #fff;
      border-radius: calc(.15rem - 1px);
      box-shadow: 0 1px 15px rgba(0, 0, 0, 0.04), 0 1px 6px rgba(0, 0, 0, 0.04);
    }

    .form-inline .input-group {
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .add-task {
      width: 100%;
    }

    .table-container {
      margin-top: 20px;
    }

    .table-container table {
      border-collapse: collapse;
      width: 100%;
    }

    .table-container th,
    .table-container td {
      padding: 10px;
      border-bottom: 1px solid #ccc;
      text-align: left;
    }

    .table-container th {
      font-weight: bold;
    }

    .status {
      text-transform: capitalize;
    }

    .filter-container {
      margin-top: 20px;
    }

    .filter-container select {
      padding: 5px;
      border-radius: 4px;
      border: 1px solid #ccc;
    }

    .task-date i {
      margin-right: 5px;
    }

    .remove-todo-item {
      color: red;
      margin-right: 10px;
    }

    .complete-todo-item {
      color: green;
      margin-right: 10px;
    }
  </style>
</head>

<body>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-body">
            <form class="form-inline" action="/list" method="post">
              <div class="input-group">
                <input type="text" class="form-control add-task" placeholder="New Task..." name="task" required>
                <input type="date" class="form-control add-task-date" name="date" required>
                <button type="submit" class="btn btn-primary">
                  <i class="fas fa-plus"></i> Add
                </button>
              </div>
            </form>
            <div class="filter-container">
              <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="task-filter" data-bs-toggle="dropdown" aria-expanded="false">
                  Filter Tasks
                </button>
                <ul class="dropdown-menu" aria-labelledby="task-filter">
                  <li><a class="dropdown-item" href="/list/filter/all">All</a></li>
                  <li><a class="dropdown-item" href="/list/filter/active">Active</a></li>
                  <li><a class="dropdown-item" href="/list/filter/completed">Completed</a></li>
                </ul>
              </div>
            </div>
            
            
            <div class="table-container">
              <table class="table">
                <thead>
                  <tr>
                    <th>Task</th>
                    <th>Due Date</th>
                    <th>Status</th>
                    <th>Activities</th>
                  </tr>
                </thead>
                <tbody>
                  <% lists.forEach((list) => { %>
                  <tr class="todo-item">
                    <td class="task-text"><%= list.task %></td>
                    <td class="task-date"><i class="fas fa-calendar-days"></i><%= moment(list.date).format('dddd, MMMM Do YYYY') %></td>
                    <td class="status"><%= list.completed ? 'Completed' : 'Active' %></td>
                    <td class="task-icons">
                      <a href="/complete/<%= list.id%>" class="complete-todo-item" title="Complete Task">
                        <i class="fas fa-check"></i>
                      </a>
                      <a href="/delete/<%= list.id%>" class="remove-todo-item" title="Delete Task">
                        <i class="fas fa-trash"></i>
                      </a>
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/your-javascript-file.js"></script>
</body>

</html>
